<import src="post-item/post-item-template.wxml" />
<view>
  <swiper catchtap="onSwiperTap"  vertical='{{false}}' indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image  src='/images/01.jpg' data-postId="0"></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/02.jpg' data-postId="1"></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/03.jpg' data-postId="2"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{posts_key}}" wx:for-item="item" wx:key="posts_key" wx:for-index="idx">
    <!-- template -->
    <view catchtap="onPostTap" data-postId="{{item.postId}}">
      <template is="postItem" data="{{...item}}"/>
    </view>
  </block>
</view>